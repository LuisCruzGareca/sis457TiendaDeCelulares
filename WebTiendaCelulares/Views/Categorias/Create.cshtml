@model WebTiendaCelulares.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoria";
}

<section id="crear-categoria" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="card-title text-uppercase mb-0">Crear Categoria</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label text-dark">Nombre</label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label text-dark">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary">Crear</button>
                                <a asp-action="Index" class="btn btn-danger ml-2">Volver</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
