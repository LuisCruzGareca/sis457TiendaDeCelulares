@model WebTiendaCelulares.Models.Colore

@{
    ViewData["Title"] = "Edit";
}

<section id="edit-color" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Editar Color</h2>
            </div>

            <h4 class="text-center">Color</h4>
            <hr />
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-danger">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
