@model WebTiendaCelulares.ViewModels.CrearCompraViewModel

@{
    ViewData["Title"] = "Comprar celular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="comprar-celular" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="card-title text-uppercase mb-0">Comprar Celular</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Total" class="control-label">Total</label>
                                <input asp-for="Total" class="form-control" disabled />
                                <span asp-validation-for="Total" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="CelularId" />
                            <input type="hidden" asp-for="Total" />
                            <div class="form-group">
                                <input asp-for="Celular.Nombre" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Comprar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-danger ml-2">Volver</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
