@model WebTiendaCelulares.ViewModels.CrearCompraViewModel

@{
    ViewData["Title"] = "Create";
}

<section id="latest-blog" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Comprar celular</h2>
                <div class="btn-right">
                    <a href="blog.html" class="btn btn-medium btn-normal text-uppercase">Compra</a>
                </div>
            </div>


            <h4 style="text-align:center">Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto"> 
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" type="number" disabled/>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px 0">
                <input asp-for="Celular" class="form-control" disabled />
                <input type="hidden" asp-for="CelularId" class="form-control" />
                <input type="hidden" asp-for="Total" class="form-control" />
                <input type="hidden" asp-for="Celular" class="form-control" />
            </div>
            <div class="form-group" style="margin: 20px 0">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="btn btn-danger">Volver</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
