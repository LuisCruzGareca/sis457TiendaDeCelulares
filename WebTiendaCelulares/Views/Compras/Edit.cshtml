@model WebTiendaCelulares.Models.Compra

@{
    ViewData["Title"] = "Detalles";
}

<section id="listar-compra" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="card-title text-uppercase mb-0">Detalles de Compra</h2>
                        <a asp-action="Index" class="btn btn-light">Volver al Listado</a>
                    </div>
                    <div class="card-body">
                        <div>
                            <h4>Compra</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DireccionEnvio)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DireccionEnvio)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Total)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Total)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.FechaVenta)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.FechaVenta)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdCelularNavigation)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdCelularNavigation.Id)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
